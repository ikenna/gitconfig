
[alias]
	cl = clone
	co = checkout
	ci = commit
	st = status
	br = branch
    df = diff
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files    
    ign = ls-files -o -i --exclude-standard  # Show files ignored by git:
	gui = !sh -c /usr/local/git/libexec/git-core/git-gui
	unstage = reset HEAD --
	last = log -1 HEAD
	
[merge]
	tool = vimdiff

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
	whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim

[push]
	default = simple
